{
  "name": "react-native-bread",
  "version": "0.1.3",
  "description": "A delicious toast library for React Native with beautiful animations and gesture support",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "react-native": "lib/module/index.js",
  "files": ["lib", "!**/__tests__", "!**/__fixtures__", "!**/__mocks__", "!**/*.map"],
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlshehriAli0/react-native-bread.git"
  },
  "author": "Ali <ali0fawzish@outlook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AlshehriAli0/react-native-bread/issues"
  },
  "homepage": "https://github.com/AlshehriAli0/react-native-bread#readme",
  "keywords": ["react-native", "toast", "notification", "snackbar", "bread", "animation", "gesture", "reanimated"],
  "scripts": {
    "build": "bob build",
    "minify": "find lib -name '*.js' -not -path '*/node_modules/*' -exec terser {} -o {} -c directives=false -m --module \\;",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf lib",
    "prepare": "bob build && npm run minify"
  },
  "devDependencies": {
    "react": "19.1.0",
    "react-native": "0.81.5",
    "react-native-builder-bob": "^0.35.2",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.4.0",
    "react-native-svg": "15.12.1",
    "react-native-worklets": "0.5.1",
    "terser": "^5.44.1",
    "typescript": "~5.9.2"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.76.0",
    "react-native-gesture-handler": ">=2.0.0",
    "react-native-reanimated": ">=4.0.0",
    "react-native-safe-area-context": ">=4.0.0",
    "react-native-svg": ">=14.0.0",
    "react-native-worklets": ">=0.4.0"
  },
  "peerDependenciesMeta": {
    "react-native-gesture-handler": {
      "optional": false
    },
    "react-native-reanimated": {
      "optional": false
    },
    "react-native-safe-area-context": {
      "optional": false
    },
    "react-native-svg": {
      "optional": false
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "commonjs",
        {
          "esm": true
        }
      ],
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
