{
  "name": "react-native-bread-monorepo",
  "private": true,
  "workspaces": ["packages/*", "example/*"],
  "scripts": {
    "dev": "bun run --cwd example/expo/react-native-bread-example start",
    "build": "bun run --cwd packages/react-native-bread build",
    "typecheck": "bun run --cwd packages/react-native-bread typecheck",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "clean": "bun run --cwd packages/react-native-bread clean"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11"
  }
}
